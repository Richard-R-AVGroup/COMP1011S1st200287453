<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comp1011s1st200287453.CarSaleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </padding>
   <TableView>
     <columns>
       <TableColumn fx:id="carID" prefWidth="75.0" text="Car ID" />
       <TableColumn fx:id="modelYear" prefWidth="75.0" text="Model Year" />
         <TableColumn fx:id="make" prefWidth="75.0" text="Make" />
         <TableColumn fx:id="model" prefWidth="75.0" text="Model" />
         <TableColumn fx:id="price" prefWidth="75.0" text="Price" />
