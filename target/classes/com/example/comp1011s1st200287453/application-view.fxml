     </columns>
   </TableView>
   <HBox minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
      <children>
         <BarChart prefHeight="150.0">
           <xAxis>
             <CategoryAxis side="BOTTOM" />
           </xAxis>
           <yAxis>
             <NumberAxis side="LEFT" />
           </yAxis>
